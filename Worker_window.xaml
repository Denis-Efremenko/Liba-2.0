        <Button x:Name="sanc_button" Content="Система штрафов" HorizontalAlignment="Left" Margin="35,400,0,0" VerticalAlignment="Top" Width="200" FontSize="24" Height="80" Click="sanc_button_Click" Background="#FF3CC8FF"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="35,500,0,0" VerticalAlignment="Top" Width="200" FontSize="36" Height="80" Click="Exit_Click" Background="Red" FontWeight="Bold"/>
        <Label Content="Выберите операцию" HorizontalAlignment="Left" Height="52" Margin="11,24,0,0" VerticalAlignment="Top" Width="260" FontSize="24" FontWeight="Bold"/>

    </Grid>
