        xmlns:local="clr-namespace:Biblioteka"
        mc:Ignorable="d" Height="720" Width="1280" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Closed="Window_Closed" Icon="icon.png" HorizontalAlignment="Center" VerticalAlignment="Center" Title="Библиотека">
    <Grid Margin="0,0,-6,0" Height="690" VerticalAlignment="Top" HorizontalAlignment="Right" Width="1280">
        <Frame x:Name="main_frame" Content="" HorizontalAlignment="Right" Height="650
               " Margin="0" VerticalAlignment="Top" Width="1000" Background="#FFEEEEEE" NavigationUIVisibility="Hidden"/>
        <Button x:Name="add_book_button" Content="Книги" HorizontalAlignment="Left" Margin="35,105,0,0" VerticalAlignment="Top" Width="200" FontSize="24" Click="add_book_button_Click" Height="80" Background="#FF3CC8FF"/>
        <Button x:Name="add_person_button" Content="Читатели" HorizontalAlignment="Left" Margin="35,300,0,0" VerticalAlignment="Top" Width="200" FontSize="24" Click="add_person_button_Click" Height="80" Background="#FF3CC8FF"/>
